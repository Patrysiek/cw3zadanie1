<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<?import button.CustomButton?>

<SplitPane dividerPositions="0.2" orientation="VERTICAL"
	prefHeight="200.0" xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1" fx:id="standardKeyboardLayout"
	fx:controller="controllers.standard.StandardKeyboardController">
	<items>
		<HBox alignment="CENTER" prefHeight="20.0" >
			<children>
				<RadioButton mnemonicParsing="false" text="Left Side"  fx:id="leftSide">
					<padding>
						<Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
					</padding>
				</RadioButton>
				<RadioButton mnemonicParsing="false" text="Right Side" fx:id="rightSide">
					<padding>
						<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
					</padding>
				</RadioButton>
			</children>
			<opaqueInsets>
				<Insets left="2.0" />
			</opaqueInsets>
		</HBox>
		<GridPane alignment="CENTER"
			maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
			stylesheets="layout/css/button_style.css" fx:id="buttonPane">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
			</rowConstraints>
			<children>


				<CustomButton maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="."
					GridPane.columnIndex="3" GridPane.rowIndex="5" buttonType="NUMERIC"/>
				<CustomButton id="numeric"
					maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="0"
					GridPane.columnIndex="2" GridPane.rowIndex="5" buttonType="NUMERIC" />
				<CustomButton maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="="
					GridPane.columnIndex="4" GridPane.rowIndex="5" buttonType="EQUAL" />

				<CustomButton maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="+"
					GridPane.columnIndex="4" GridPane.rowIndex="4" buttonType="ADD" />
				<CustomButton id="numeric"
					maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="3"
					GridPane.columnIndex="3" GridPane.rowIndex="4" buttonType="NUMERIC" />
				<CustomButton id="numeric"
					maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="2"
					GridPane.columnIndex="2" GridPane.rowIndex="4" buttonType="NUMERIC" />
				<CustomButton id="numeric"
					maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="1"
					GridPane.columnIndex="1" GridPane.rowIndex="4" buttonType="NUMERIC" />

				<CustomButton maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="-" buttonType="SUBSTRACT"
					GridPane.columnIndex="4" GridPane.rowIndex="3" />
				<CustomButton id="numeric"
					maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="6"
					GridPane.columnIndex="3" GridPane.rowIndex="3" buttonType="NUMERIC" />
				<CustomButton id="numeric"
					maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="5"
					GridPane.columnIndex="2" GridPane.rowIndex="3" buttonType="NUMERIC" />
				<CustomButton id="numeric"
					maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="4"
					GridPane.columnIndex="1" GridPane.rowIndex="3" buttonType="NUMERIC" />
				<CustomButton maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="n!"
					GridPane.rowIndex="3" buttonType="FACTORIAL" />
				<CustomButton maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="x"
					GridPane.columnIndex="4" GridPane.rowIndex="2"
					buttonType="MULTIPLY" />
				<CustomButton maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="/"
					GridPane.columnIndex="4" GridPane.rowIndex="1" buttonType="DIVIDE" />
				<CustomButton maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false"
					text="Mod" GridPane.columnIndex="1" GridPane.rowIndex="1"
					buttonType="MODULO" />

				<CustomButton id="numeric"
					maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="9"
					GridPane.columnIndex="3" GridPane.rowIndex="2" buttonType="NUMERIC" />
				<CustomButton maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false"
					text="&lt;--" GridPane.columnIndex="3" GridPane.rowIndex="1"
					buttonType="BACKSPACE" />


				<CustomButton id="numeric"
					maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="8"
					GridPane.columnIndex="2" GridPane.rowIndex="2" buttonType="NUMERIC" />
				<CustomButton id="numeric"
					maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="7"
					GridPane.columnIndex="1" GridPane.rowIndex="2" buttonType="NUMERIC" />
				<CustomButton maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="π"
					GridPane.rowIndex="2" buttonType="PI" />
				<CustomButton maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="C"
					GridPane.columnIndex="1" GridPane.rowIndex="5" buttonType="ZEROING" />
				<CustomButton maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="CE"
					GridPane.columnIndex="0" GridPane.rowIndex="5" buttonType="RESET" />

				<CustomButton maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false"
					text="log" GridPane.columnIndex="2" GridPane.rowIndex="1"
					buttonType="LOGARITHM" />


				<CustomButton maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="√"
					GridPane.rowIndex="1" buttonType="SQRT" />
				<CustomButton maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="^"
					GridPane.columnIndex="0" GridPane.rowIndex="4" buttonType="POWER" />


			</children>


			<opaqueInsets>
				<Insets />
			</opaqueInsets>
		</GridPane>
	</items>
</SplitPane>
